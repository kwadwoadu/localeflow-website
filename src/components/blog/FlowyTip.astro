---
/**
 * FlowyTip - A callout box featuring Flowy mascot
 *
 * Usage in MDX:
 * <FlowyTip pose="thinking" title="Pro Tip">
 *   Your tip content here...
 * </FlowyTip>
 */

interface Props {
  pose?: 'waving' | 'thinking' | 'thumbsup' | 'celebrating' | 'translating';
  title?: string;
}

const { pose = 'waving', title = 'Flowy Tip' } = Astro.props;
const imagePath = `/flowy/flowy-${pose}.webp`;
---

<div class="flowy-tip not-prose my-8 rounded-xl bg-gradient-to-r from-orange-50 to-amber-50 border border-orange-200 p-5 flex items-start gap-4 shadow-sm">
  <div class="flex-shrink-0">
    <img
      src={imagePath}
      alt={`Flowy ${pose}`}
      class="w-16 h-16 object-contain"
      loading="lazy"
    />
  </div>
  <div class="flex-1 min-w-0">
    <p class="font-semibold text-orange-700 text-sm uppercase tracking-wide mb-1">
      {title}
    </p>
    <div class="text-gray-700 text-sm leading-relaxed prose-sm">
      <slot />
    </div>
  </div>
</div>
